<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoforgottpassword"
    tools:context=".newPasswordFragment">


    <EditText
        android:id="@+id/CreateNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirm new password"
        android:textColor="@color/black"
        android:textColorHint="@color/white_flojo"
        app:layout_constraintBottom_toTopOf="@+id/Continue2"
        app:layout_constraintEnd_toEndOf="@+id/Continue2"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/Continue2" />

    <TextView
        android:id="@+id/ConfirmNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW PASSWORD"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/NewPasswordTitle"
        app:layout_constraintEnd_toEndOf="@+id/Continue2"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/Continue2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

    <EditText
        android:id="@+id/NewPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Create new password"
        android:textColor="@color/black"
        android:textColorHint="@color/white_flojo"
        app:layout_constraintBottom_toTopOf="@+id/CreateNewPassword"
        app:layout_constraintEnd_toEndOf="@+id/Continue2"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/Continue2" />

    <Button
        android:id="@+id/Continue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Continue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598" />

</androidx.constraintlayout.widget.ConstraintLayout>